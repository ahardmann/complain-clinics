@model Clinic.ViewModel.OcorrenciasViewModel

@{
    ViewBag.Title = "Adicionar nova Ocorrencia";
}

<h2>Adicionar uma Nova Ocorrencia</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ocorrencia</h4>
        <hr>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-md-4">
                <label>Nome da Clinica</label>
                @Html.EditorFor(model => model.NOME_CLINICA, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOME_CLINICA, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Nome do Médico</label>
                @Html.EditorFor(model => model.NOME_MEDICO, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOME_MEDICO, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Site da Clinica</label>
                @Html.EditorFor(model => model.SITE_CLINICA, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SITE_CLINICA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label>Atraso Médio</label>
                @Html.EditorFor(model => model.ATRASO_MEDIO, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ATRASO_MEDIO, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Número de Ocorrências</label>
                @Html.EditorFor(model => model.NUMERO_OCORRENCIAS, new { htmlAttributes = new { maxlength = 10, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NUMERO_OCORRENCIAS, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label>Data</label>
                @Html.EditorFor(model => model.DATA, new { htmlAttributes = new { @class = "datepicker form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group pull-left">
            <div class="col-md-12">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <div class="btn btn-default">
                    @Html.ActionLink("Cancelar", "Index")
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
