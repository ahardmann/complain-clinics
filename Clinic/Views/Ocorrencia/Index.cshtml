@model Clinic.Models.Ocorrencia

@{
    ViewBag.Title = "Ocorrencias";
}

<h2>Ocorrências</h2>

<p>
    <div class="btn btn-success">
        @Html.ActionLink("Adicionar", "Create")
    </div>
</p>
<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOME_CLINICA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOME_MEDICO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SITE_CLINICA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ATRASO_MEDIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NUMERO_OCORRENCIAS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATA)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NOME_CLINICA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOME_MEDICO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SITE_CLINICA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ATRASO_MEDIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.RUA)
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-12 text-center" style="top:10px;">
                        @if (Request.IsAuthenticated)
                        {
                            <div class="btn btn-info btn-sm">
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID_OCORRENCIA })
                            </div>
                            <div class="btn btn-danger btn-sm" style="color:#FFF;">
                                @Html.ActionLink("Deletar", "Delete", new { id = item.ID_OCORRENCIA })
                            </div>
                        }
                        <div class="btn btn-default btn-sm">
                            @Html.ActionLink("Detalhes", "Details", new { id = item.ID_OCORRENCIA })
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
