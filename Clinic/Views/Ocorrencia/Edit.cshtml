@model Clinic.Models.Ocorrencia

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ocorrências</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_OCORRENCIA)

        <div class="form-group">
            <div class="col-md-5">
                @Html.LabelFor(model => model.NOME_CLINICA)
                @Html.EditorFor(model => model.NOME_CLINICA, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOME_CLINICA, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-5">
                @Html.LabelFor(model => model.NOME_MEDICO)
                @Html.EditorFor(model => model.NOME_MEDICO, new { htmlAttributes = new { maxlength = 14, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NOME_MEDICO, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-5">
                @Html.LabelFor(model => model.SITE_CLINICA)
                @Html.EditorFor(model => model.SITE_CLINICA, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SITE_CLINICA, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-5">
                @Html.LabelFor(model => model.ATRASO_MEDIO)
                @Html.EditorFor(model => model.ATRASO_MEDIO, new { htmlAttributes = new { maxlength = 5, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ATRASO_MEDIO, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-5">
                @Html.LabelFor(model => model.NUMERO_OCORRENCIAS)
                @Html.EditorFor(model => model.NUMERO_OCORRENCIAS, new { htmlAttributes = new { maxlength = 3, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NUMERO_OCORRENCIAS, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-5">
                @Html.LabelFor(model => model.DATA)
                @Html.EditorFor(model => model.DATA, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5">
                @Html.LabelFor(model => model.Endereco)
                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { maxlength = 100, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 pull-left">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <div class="btn btn-default">
                    @Html.ActionLink("Cancelar", "Index")
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
